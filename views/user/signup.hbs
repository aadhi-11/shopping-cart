<div class="container">
    <div class="container">
        <h1 class="text-center">Create new account</h1>
        <form action="/signup" method="post">
            <label for="Name">Name</label>
            <input class="form-control" type="text" name="Name" id="Name" placeholder="Enter Name" required>

            <label for="email">Email address</label>
            <input class="form-control" type="email" name="email" id="email" placeholder="Enter email" required>

            <label for="Password">Password</label>
            <input class="form-control" type="password" name="Password" id="Password" placeholder="Password" required>
            <br>
            <a class="text-decoration-none" href="/login">Already have an account?</a>
            <button type="submit" class="btn btn-primary float-end">Signup</button>
        </form>
    </div>
</div>