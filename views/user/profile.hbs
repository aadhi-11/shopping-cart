<section>
    <div class="container">
        <div class="container p-5">
<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSrQ6RdNYDIeXg3iTWoclyhB9BJ55rPr5emnw&usqp=CAU"
                alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
              <h5>{{user.Name}}</h5>
              <p></p>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">{{user.email}}</p>
                  </div>
                  
                  <div class="col-6 mb-3">
                    <h6>Gender</h6>
                    {{#if user.Gender}}
                    <p class="text-muted">{{user.Gender}}</p>
                    {{else}}
                    <div class="container" id="Genders">
                      <form action="/gender" method="post" class="form-control">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Gender" id="Male" value="male">
                        <label class="form-check-label" for="flexRadioDefault1">
                          Male
                        </label>
                    </div>
                    <div class="form-check">
                          <input class="form-check-input" type="radio" name="Gender" id="female" value="Female">
                          <label class="form-check-label" for="flexRadioDefault2" >
                            Female
                          </label>
                          <button type="submit" class="btn btn-success">submit</button>
                    </form>
                    </div>
                    </div>
                    {{/if}}
                  </div>
                  <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Phone:</h6>
                    {{#if user.phone}}
                    <p class="text-muted">{{user.phone}}</p>
                    {{else}}
                    <div class="container " id="phones">
                      <form action="/phone" method="post" class="form-control">
                      <div class="mb-3">
                        <label for="phone" class="form-label">phone Number:</label>
                        <input type="text" class="form-control" id="phone" name="phone">
                      </div>
                      <button type="submit" class="btn btn-success">submit</button>
                      </form>
                    </div>
                    {{/if}}
                  </div>
                  
                  
                  </div>
                </div>
                <h6>orders</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                   <a href="/orders" class="btn btn-info">All orders</a>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
        </div>
    </div>
</section>
