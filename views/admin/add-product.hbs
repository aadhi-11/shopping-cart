<section>
    <div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Add Products</h2>
            <form action="/admin/add-product" enctype="multipart/form-data" method="post">
                <label for="Name">Name:</label>
                <input type="text" name="Name" id="" class="form-control" required>

                <label for="Title">Title</label>
                <input type="text" name="Title" id="Title" class="form-control" required>

                <label for="Category">Category</label>
                <input type="text" name="Category" id="" class="form-control" required>

                <label for="Price">Price</label>
                <input type="number" name="Price" id="" class="form-control" required>

                <label for="Description">Description</label>
                <input type="text" name="Description" id="" class="form-control" required>

                <label for="img">Image</label>
                <input type="file" name="img" id="" class="form-control" required>

                <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form>
        </div>
    </div>
    </div>
</section>