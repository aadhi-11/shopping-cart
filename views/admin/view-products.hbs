<section>
    <div class="container">
        <a href="/admin/add-product" class="btn btn-success   btn-sm float-end">+ Add product</a>
        <div class="container  mt-4 mb-3 p-5">

            <table class="table mt-5 p-5" id="productsTable">
                <thead>
                    <tr>

                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="image">Image</th>
                        <th scope="col">Options</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>

                        <td>{{this.Name}}</th>
                        <td>{{this.Title}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                        <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt="image"></td>
                        <td>
                            <a href="/admin/edit-product/?id={{this._id}}" class="btn btn-primary btn-sm">Edit</a>
                            <br>
                            <br>
                            <a href="/admin/delete-product/?id={{this._id}}&name=aadhi" class="btn btn-danger btn-sm" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                  </tbody>
        </table>
        </div>
    </div>
</section>

<script>
    $(function(){
        $('#productsTable').DataTable();
    });
</script>